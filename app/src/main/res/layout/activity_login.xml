<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.soham.sihuser.Login"
    android:background="@mipmap/backgroundlogin">


    <TextView
        android:text="@string/user_forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgot_password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="46dp"
        android:textColor="@color/bodyTextColor" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/user_signin"
        android:background="@drawable/loginbutton"
        android:id="@+id/btlogin"
        android:textColor="@color/login"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/registertext"
        android:layout_alignStart="@+id/registertext"
        android:layout_alignEnd="@+id/registertext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="@string/user_email"
        android:layout_above="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@mipmap/minofsteel"
        android:id="@+id/imageView2"
        android:layout_above="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentEnd="true"
        android:layout_height="100dp" />

    <Button
        android:text="@string/user_newaccount"
        android:layout_height="40dp"
        android:background="@drawable/loginbutton"
        android:id="@+id/registertext"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/forgot_password"
        android:layout_alignStart="@+id/forgot_password"
        android:layout_marginEnd="40dp"
        android:layout_width="match_parent"
        android:textColor="@color/login" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="@string/user_password"
        android:layout_above="@+id/btlogin"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/vidyut"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/imageView2"
        android:layout_alignEnd="@+id/btlogin"
        android:layout_alignStart="@+id/btlogin" />

</RelativeLayout>
